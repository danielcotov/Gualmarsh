<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:background="@drawable/popup_shape"
    android:padding="25dp"
    android:orientation="vertical"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/tv_deletePopup_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/deletePopUp_Title"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:fontFamily="sans-serif-medium"/>

    <TextView
        android:id="@+id/tv_deletePopup_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="@string/deletePopUp_Text"
        android:layout_marginTop="25dp"
        android:textColor="@color/textColorGray"/>

    <LinearLayout
        android:id="@+id/deletePopup_Icons"
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_deletePopup_Cancel"
            android:layout_width="fill_parent"
            android:layout_marginEnd="10dp"
            android:layout_height="60dp"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:backgroundTint="@color/textColorGray"
            android:textColor="@color/w_darkBG"
            android:text="@string/deletePopup_Cancel"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btn_deletePopup_Delete"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:backgroundTint="@color/w_yellow"
            android:textColor="@color/w_darkBG"
            android:text="@string/deletePopup_Discard"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"/>

    </LinearLayout>



</LinearLayout>