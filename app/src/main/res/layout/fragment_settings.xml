<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/w_darkBG"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:id="@+id/tv_Settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SETTINGS"
        android:fontFamily="sans-serif-medium"
        android:textSize="35sp"
        android:textColor="@color/white"
        android:layout_marginTop="12dp"
        android:textAlignment="center"
        tools:ignore="MissingConstraints"/>
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="328dp"
            android:layout_height="15dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="42.5dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/log_in_division" />
        <Button
            android:id="@+id/btn_logOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_Log_Out"
            android:gravity="left|center_vertical"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:paddingLeft="25dp"
            android:background="@color/transparent"
            android:drawableLeft="@drawable/ic_sign_out"/>

        <Button
            android:id="@+id/btn_Web"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_Web"
            android:textColor="@color/white"
            android:background="@color/transparent"
            android:textSize="15dp"
            android:paddingLeft="25dp"
            android:gravity="left|center_vertical"
            android:drawableLeft="@drawable/ic_web"/>
        <Button
            android:id="@+id/btn_Phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_Email"
            android:textColor="@color/white"
            android:background="@color/transparent"
            android:textSize="15dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="25dp"
            android:drawableLeft="@drawable/ic_phone"/>
        <Button
            android:id="@+id/btn_Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_Phone"
            android:textColor="@color/white"
            android:background="@color/transparent"
            android:gravity="left|center_vertical"
            android:textSize="15dp"
            android:paddingLeft="25dp"
            android:drawableLeft="@drawable/ic_email"/>

    </LinearLayout>



</androidx.appcompat.widget.LinearLayoutCompat>