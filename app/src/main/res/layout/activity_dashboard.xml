<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/w_darkBG"
    android:gravity="center"
    android:clipToPadding="false"
    android:clipChildren="false">

    <LinearLayout
        android:id="@+id/dahsboardLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/w_darkBG">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="27dp"
            android:layout_marginTop="49dp"
            android:fontFamily="sans-serif-black"
            android:text="Dashboard"
            android:textColor="@color/w_blue"
            android:textSize="35sp" />

        <ImageView
            android:id="@+id/dashboardFilter"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="154dp"
            android:layout_marginTop="61.5dp"
            android:src="@drawable/ic_filter"
            app:tint="@color/w_blue" />

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="103dp"
        android:clipToPadding="false"
        android:clipChildren="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clipToPadding="false"
            android:clipChildren="false">

            <LinearLayout
                android:id="@+id/dashboardLayout2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/w_divider">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="13dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/dashboard_summary"
                    android:textColor="@color/white"
                    android:textSize="18sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="34dp"
                    android:background="@drawable/dashboard_box"
                    android:elevation="8dp"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/btn_inventory"
                        android:layout_width="47dp"
                        android:layout_height="47dp"
                        android:layout_marginStart="64dp"
                        android:layout_marginTop="32dp"
                        android:src="@mipmap/ic_items_round" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dashboard_box"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="34dp"
                    android:elevation="8dp">
                <Button
                    android:id="@+id/btn_web"
                    android:layout_width="47dp"
                    android:layout_height="47dp"
                    android:layout_marginStart="64dp"
                    android:layout_marginTop="32dp"
                    android:src="@mipmap/ic_items_round" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/dashboard_box"
                    android:elevation="8dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/dashboard_box"
                    android:elevation="8dp">

                    <Button
                        android:id="@+id/btn_sign_out"
                        android:layout_width="47dp"
                        android:layout_height="47dp"
                        android:layout_marginStart="64dp"
                        android:layout_marginTop="32dp"
                        android:src="@mipmap/ic_items_round" />
                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="277dp"
        android:background="@drawable/icon_bar"
        android:layout_marginTop="684dp">


    </LinearLayout>

</RelativeLayout>