<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/w_blueLogo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_marginTop="176dp"
            android:src="@drawable/logo"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="303dp"
            app:srcCompat="@drawable/inventory_management" />
    </LinearLayout>


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="328dp"
        android:layout_height="15dp"
        android:layout_marginTop="341.5dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/log_in_division" />


    <Button
        android:id="@+id/btn_login"
        android:layout_width="310dp"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="396.5dp"
        android:text="LOG IN"
        android:fontFamily="sans-serif-medium"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:backgroundTint="@color/white"
        android:background="@drawable/rounded_corners" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="310dp"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="474.5dp"
        android:text="REGISTER"
        android:fontFamily="sans-serif-medium"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:backgroundTint="@color/white"
        android:background="@drawable/rounded_corners" />




</RelativeLayout>