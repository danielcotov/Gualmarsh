<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashboardFragment"
    android:layout_width="match_parent"
    android:background="@color/w_darkBG"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/w_darkBG"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/dahsboardLayout1"
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:gravity="center"
            android:paddingStart="27dp"
            android:paddingEnd="27dp"
            android:background="@color/w_darkBG">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="@string/dashboard_main"
                android:layout_weight="5"
                android:layout_marginTop="10dp"
                android:textColor="@color/w_blue"
                android:textSize="35sp" />

            <ImageView
                android:id="@+id/btn_export"
                android:layout_width="30dp"
                android:layout_marginTop="10dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_import_export"
                app:tint="@color/w_blue" />

        </LinearLayout>



                <LinearLayout
                    android:id="@+id/dashboardSummaryDivider"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/w_divider">

                    <TextView
                        android:id="@+id/tv_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="27dp"
                        android:layout_marginTop="13dp"
                        android:layout_marginBottom="13dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/dashboard_summary"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="170dp"
                        android:layout_height="158dp"
                        android:layout_marginStart="27dp"
                        android:layout_marginTop="34dp"
                        app:cardBackgroundColor="@color/w_darkLightGrey"
                        app:cardElevation="8dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="47dp"
                            android:layout_height="47dp"
                            android:layout_marginStart="62dp"
                            android:layout_marginTop="32dp"
                            android:src="@mipmap/ic_items_round" />

                        <TextView
                            android:id="@+id/tv_dashboardItemsNum"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="87dp"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_dashboardItems"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="111dp"
                            android:fontFamily="sans-serif-light"
                            android:gravity="center"
                            android:text="@string/dashboard_items"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="15sp" />


                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="34dp"
                        android:background="@drawable/dashboard_box"
                        android:elevation="8dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="47dp"
                            android:layout_height="47dp"
                            android:layout_marginStart="62dp"
                            android:layout_marginTop="32dp"
                            android:src="@mipmap/ic_categories_round" />

                        <TextView
                            android:id="@+id/tv_dashboardCategoriesNum"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:fontFamily="sans-serif-medium"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_dashboardCategories"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:fontFamily="sans-serif-light"
                            android:gravity="center"
                            android:text="@string/dashboard_categories"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="15sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="35dp">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="27dp"
                        android:layout_marginTop="18dp"
                        android:background="@drawable/dashboard_box"
                        android:elevation="8dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="47dp"
                            android:layout_height="47dp"
                            android:layout_marginStart="62dp"
                            android:layout_marginTop="32dp"
                            android:src="@mipmap/ic_quantity_round" />

                        <TextView
                            android:id="@+id/tv_dashboardQuantityNum"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_dashboardQuantity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:gravity="center"
                            android:fontFamily="sans-serif-light"
                            android:text="@string/dashboard_quantity"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="18dp"
                        android:background="@drawable/dashboard_box"
                        android:elevation="8dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="47dp"
                            android:layout_height="47dp"
                            android:layout_marginStart="64dp"
                            android:layout_marginTop="32dp"
                            android:src="@mipmap/ic_total_round" />

                        <TextView
                            android:id="@+id/tv_dashboardTotalNum"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:fontFamily="sans-serif-medium"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_dashboardTotal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="0dp"
                            android:fontFamily="sans-serif-light"
                            android:text="@string/dashboard_total"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="15sp" />
                    </LinearLayout>

                </LinearLayout>


    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>